<!DOCTYPE html>
<html lang="ru">

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Киберполигон</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Cyberpolygon.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" sizes="32x32" href="~/img/favicon-32x32.png">

</head>

<body>

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light border-bottom box-shadow mb-3" style="background-color:#00aeef">
            <div class="container">
                <a class="navbar-brand text-white" asp-area="" asp-page="/Index">КИБЕРПОЛИГОН</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Configuration/Index">Конфигурации</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Infrastructure">Инфраструктура</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Bat">Генерация bat-файла</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-page="/Settings">Параметры</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Киберполигон | ТюмГУ
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        if (!document.cookie.includes('proxmox_url')) {
            document.cookie = 'proxmox_url=https://192.168.95.134:8006/api2/json';
        }
        if (!document.cookie.includes('PackerPath')) {
            document.cookie = 'PackerPath=C:\111\Cyberpolygon MVC beta\Cyberpolygon\packer';
        }
    </script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>